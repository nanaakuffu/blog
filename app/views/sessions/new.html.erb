<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="pt-3" align="center"> Log in </h1>

            <%= form_for :sessions, url: login_url do |f| %> 
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label"><%= f.label :email %></label>
                    <div class="col-sm-10">
                        <%= f.email_field :email, class: "form-control", placeholder: "User email address" %>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-sm-2 col-form-label"><%= f.label :password %></label>
                    <div class="col-sm-10">
                        <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "User password" %>
                    </div>
                </div>    
                
                <div class="form-group row">
                    <div class="offset-sm-2 col-sm-10">
                        <%= f.submit "Login", class: "btn btn-primary" %>
                        <%= link_to "Back to articles", articles_path, class: "btn btn-primary" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>