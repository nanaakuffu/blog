<% obj.each do |item| %>
    <div class="row">
        <div class="col-md-8 offset-md-2 pb-3">
            <div class="card bg-light">
                <div class="article-title pl-2">
                    <%= link_to item.title, article_path(item) %>
                </div>
                <div class="article-body pl-2">
                    <%= truncate(item.description, length: 100) %>
                    <div class="article-meta-details">
                        <small>
                            Created by: <%= item.user.username if item.user %>,
                                        <%= time_ago_in_words(item.created_at) %> ago,
                            last updated: <%= time_ago_in_words(item.updated_at) %> ago.
                        </small>
                    </div>
                </div>
                <div class="article-actions pl-2">
                    <%= link_to "Edit this article", edit_article_path(item), class: "btn btn-sm btn-primary" %>
                    <%= link_to "Delete this article", article_path(item), method: :delete, 
                                        data: {confirm: "Are you sure you want to delete this article?"}, 
                                        class: "btn btn-sm btn-danger"%>
                </div>
            </div>
        </div>
    </div>    
<% end %>