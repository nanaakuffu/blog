<h1>Showing all available articles </h1>
<% count = 0 %>
<p><%= link_to "Create new article", new_article_path %></p>
<table>
    <tr>
        <th> SN </th>
        <th> Title </th>
        <th colspan='3'> Description </th>
    </tr>
    
    <% @article.each do |item| %>
        <tr>
            <td><%= count + 1 %>
            <td><%= item.title %></td>
            <td><%= item.description %></td>
            <td><%= link_to "Edit", edit_article_path(item) %></td>
            <td><%= link_to "Show", article_path(item) %></td>
        </tr>
        <% count += 1 %>
    <% end %>
    
</table>