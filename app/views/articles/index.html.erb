<h1>Showing all available articles </h1>
<% count = 0 %>
<p><%= link_to "Home", root_path %> | <%= link_to "Create new article", new_article_path %> | <%= link_to "About Us", about_path %> </p>
<table>
    <tr>
        <th> SN </th>
        <th> Title </th>
        <th> Description </th>
    </tr>
    
    <% @article.each do |item| %>
        <tr>
            <td><%= count + 1 %>
            <td><%= item.title %></td>
            <td colspan='4'><%= item.description %></td>
            <td><%= link_to "Edit", edit_article_path(item) %></td>
            <td><%= link_to "Show", article_path(item) %></td>
            <td><%= link_to "Delete", article_path(item), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
        <% count += 1 %>
    <% end %>
    
</table>