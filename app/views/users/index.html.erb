<h1 class="pt-3" align="center"> All Bloggers </h1>
<% @users.each do |user| %>
    <div class="row">
        <div class="bg-light col-md-6 offset-md-3 users">
            <div class="image">
            </div>
            <div class="username">
                <h3><%= link_to user.username, user_path(user) %></h3>
                <h5><%= pluralize(user.articles.count, "article") if user.articles %>
        </div>
    </div>
<% end %>